Display

<Display>:
    BoxLayout
        spacing:"10dp"
        orientation: "vertical"
        Image:
            id: image
            source: ""
        GridLayout:
            orientation: "lr-tb"
            cols: 2
            rows: 4
            TextInput:
                id: user_input
            Button:
                text: "load image"
                on_press: root.load_image()
            Button:
                text: "Line drawing"
                on_press: root.line_drawing("test")
            Button:
                text: "Sepia"
                on_press: root.sepia("test")
            Button:
                text: "Black and White"
            Button:
                text: "Inverse"
                on_press: root.inverse("test")
            Button:
                text: "Pointilism"
            Button:
                text: "Pixelate"
                on_press: root.pixelate("test")
