Display

<Display>:
    BoxLayout
        spacing:"10dp"
        orientation: "vertical"
        Image:
            id: image
            source: ""
        GridLayout:
            orientation: "lr-tb"
            cols: 2
            rows: 4
            TextInput:
                id: user_input
            Button:
                text: "load image"
                on_press: root.load_image()
            Button:
                text: "Sepia"
                on_press: root.sepia("test")
            Button:
                text: "Halo"
                on_press: root.distance_halo()
            Button:
                text: "Inverse"
                on_press: root.inverse("test")
            Button:
                text: "Pointillism"
                on_press: root.pointillism("test")
            Button:
                text: "lime green"
                on_press: root.lime_green()
